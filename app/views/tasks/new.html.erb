<h1 class="text-center ">Create Task</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3 task-form">
      <%= form_for(@task) do |f| %>
      <%= f.label :title  %>
      <%= f.text_field :title, class:"form-control" %>
      <%= f.label :details %>
      <%= f.text_area :details, class:"form-control"  %>
      <%= f.submit class:"form-control form-btn" %>
   <% end %>
  </div>
</div>

  
